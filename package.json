{
  "name": "mern-testing-suite",
  "version": "1.0.0",
  "description": "MERN stack application with comprehensive testing suite",
  "main": "server/src/index.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "jest",
    "test:unit": "jest --selectProjects client server --testPathPattern='unit'",
    "test:integration": "jest --selectProjects server --testPathPattern='integration'",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "keywords": [
    "mern",
    "testing",
    "jest",
    "cypress"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "cypress": "^13.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
